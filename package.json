{
  "name": "lien_aggregator",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "initialize": "yarn install",
    "compile": "npx truffle compile",
    "migrate": "npx truffle migrate",
    "migrate:ropsten": "npx truffle migrate --network ropsten",
    "migrate:mainnet": "npx truffle migrate --network mainnet",
    "test": "npx truffle test",
    "test:unit": "npx truffle test test/contract_test/unit_test/**/*.js",
    "test:combine": "npx truffle test test/contract_test/combine_test/*.js",
    "prettier:solidity": "npx prettier --write 'contracts/**/*.sol'",
    "prettier:test": "npx prettier --write test/contract_test/**/**/*.js",
    "prettier": "yarn prettier:solidity || yarn prettier:test",
    "ganache": "ganache-cli --port 8545 -e 1000"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "test/**/*.js": [
      "npx prettier --write"
    ],
    "contracts/**/*.sol": [
      "npx prettier --write"
    ]
  },
  "dependencies": {
    "@openzeppelin/contracts": "3.2.2-solc-0.7",
    "@openzeppelin/test-helpers": "^0.5.9",
    "@truffle/hdwallet-provider": "^1.2.0",
    "bignumber.js": "^9.0.1",
    "dotenv": "^8.2.0",
    "ganache-cli": "^6.12.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2",
    "prettier-plugin-solidity": "^1.0.0-alpha.59",
    "truffle-flattener": "^1.5.0"
  }
}
